    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["lib"]
}
